{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "typeRoots": [ "./types", "./node_modules/@types"]
      },
      "include": ["./ts"],
      "exclude": ["node_modules", "**/__tests__/*", "dist", "src", "target", "types"]
  }